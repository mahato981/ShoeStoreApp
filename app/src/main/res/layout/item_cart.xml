<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/gray_rounded_bg"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/cartItemEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘Ÿ"
        android:textSize="48sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nike Air Max"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/cartItemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sports Shoes â€¢ Size: 10"
            android:textSize="14sp"
            android:textColor="@color/gray_500"/>

        <TextView
            android:id="@+id/cartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="â‚¹7,499"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_600"/>

        <Button
            android:id="@+id/removeCartItemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:text="@string/remove"
            android:textColor="@color/red_600"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
