<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Product Image Area -->
    <FrameLayout
        android:id="@+id/productImageArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Gradient Background -->
        <View
            android:id="@+id/productGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Golden ornaments -->
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:background="@drawable/golden_ornament"/>

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/golden_ornament"/>

        <!-- Product Emoji -->
        <TextView
            android:id="@+id/productDetailEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ‘Ÿ"
            android:textSize="180sp"/>

        <!-- Category Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="24dp"
            android:background="@drawable/category_badge_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/detailCategoryIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¨"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/detailCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Male"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"/>
        </LinearLayout>

        <!-- Close Button -->
        <TextView
            android:id="@+id/closeButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/close_button_bg"
            android:gravity="center"
            android:text="âœ•"
            android:textSize="28sp"
            android:textColor="@color/gray_900"/>
    </FrameLayout>

    <!-- Thumbnail Images -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/thumbnailContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Thumbnails will be added dynamically -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Product Details Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/detailProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nike Air Max"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"/>

            <!-- Categories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/detailMainCategoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/indigo_badge_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Male"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/indigo_700"/>

                <TextView
                    android:id="@+id/detailSubCategoryBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/orange_badge_bg"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Sports Shoes"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_600"/>
            </LinearLayout>

            <!-- Prices -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/detailDiscountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹7,499"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_600"/>

                <TextView
                    android:id="@+id/detailOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical"
                    android:text="â‚¹8,995"
                    android:textSize="16sp"
                    android:textColor="@color/gray_400"
                    android:textStyle="bold"
                    android:background="@drawable/strikethrough_bg"/>
            </LinearLayout>

            <!-- Box Number, Code, Location -->
            <TextView
                android:id="@+id/detailBoxNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Box Number: #543210"
                android:textSize="12sp"
                android:textColor="@color/gray_500"/>

            <TextView
                android:id="@+id/detailCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: 9832"
                android:textSize="12sp"
                android:textColor="@color/gray_500"/>

            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Shelf 1, Row 4"
                android:textSize="12sp"
                android:textColor="@color/gray_500"/>

            <!-- Description Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"/>

            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Premium quality shoes designed for comfort and style."
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="2dp"/>

            <!-- Size Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_rounded_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_size"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"/>

                <GridLayout
                    android:id="@+id/sizeGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:columnCount="5"
                    android:rowCount="3">
                    <!-- Size buttons will be added dynamically -->
                </GridLayout>
            </LinearLayout>

            <!-- Available Sizes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_rounded_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_sizes"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/availableSizesChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <!-- Size chips will be added dynamically -->
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/addToCartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_button_bg"
                android:text="@string/select_a_size"
                android:textColor="@color/gray_500"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="12dp"
                android:enabled="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
